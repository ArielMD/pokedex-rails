<%= form_with url: "/pokedex", method: :get, class: "form-search" do |form| %>
  <div class="form-group">
    <%= form.label :query, "Encuentra tu Pokémon favorito" %>
    <%= form.text_field :query, class: "input-search", placeholder: "Ingresa nombre o número de pokédex" %>
    <%= form.submit "search", class: "submit-search" %>
  </div>
<% end %>